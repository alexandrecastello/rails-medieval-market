<h1>New product</h1>
<%= form_for(@product) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>
  <%= f.label :coin_price %>
  <%= f.number_field :coin_price %>
  <%= f.submit %>
<% end %>

